<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="lk.ac.mrt.labphone.fragment.LevelFragment">

    <lk.ac.mrt.labphone.view.LevelTwoDimen
        android:layout_width="@dimen/level_size"
        android:layout_height="@dimen/level_size"
        android:id="@+id/level_view"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="30dp"
        app:bubble_image="@drawable/spirit_both"
        app:background_image="@drawable/level_both"
        android:layout_marginTop="30dp" />

    <lk.ac.mrt.labphone.view.LevelSingleDimen
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/level_vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_toRightOf="@+id/level_view"
        android:layout_toEndOf="@+id/level_view"
        android:layout_above="@+id/level_horizontal"
        android:layout_alignTop="@+id/level_view"
        app:bubble_image="@drawable/spirit_vertical"
        app:background_image="@drawable/level_vertical"
        app:orientation="vertical"/>

    <lk.ac.mrt.labphone.view.LevelSingleDimen
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:id="@+id/level_horizontal"
        android:layout_below="@+id/level_view"
        android:layout_alignLeft="@+id/level_view"
        android:layout_alignStart="@+id/level_view"
        android:layout_toLeftOf="@+id/level_vertical"
        android:layout_toStartOf="@+id/level_vertical"
        app:bubble_image="@drawable/spirit_horizontal"
        app:background_image="@drawable/level_horizontal"
        app:orientation="horizontal"/>

</RelativeLayout>
